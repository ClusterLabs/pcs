pacemaker_gname = "@PCMK_GROUP@"
sbd_binary = "@SBDEXECPREFIX@/sbin/sbd"
sbd_watchdog_default = "/dev/watchdog"
sbd_config = "@SBDCONFDIR@/sbd"
