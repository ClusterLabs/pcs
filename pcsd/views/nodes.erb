                        {{/each }}
                      </select></td>
                      <td><button type="button" onclick="add_remove_fence_level($(this).parent());" name="add"><%=@I18n.t(:add) %></button></td>
                    </tr>
                  </table>
              </td>
              </tr>
            </table>
            {{#if Pcs.nodesController.utilization_support}}
            <table style="clear:left; float:left; margin-top: 25px;"><tr><td>
            {{utilization-table
                entity=Pcs.nodesController.cur_node
