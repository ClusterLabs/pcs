<div id="sbd_status_dialog" style="display:none;">
  <table>
    <tr>
      <td class="darkdatatable_header">SBD <%=@I18n.t(:'table.title.serviceStatus')%></td>
    </tr>
    <tr>
      <td>
        <table class="darkdatatable">
          <tr>
            <th><%=@I18n.t(:node)%></th>
            <th><%=@I18n.t(:installed)%></th>
            <th><%=@I18n.t(:enabled)%></th>
            <th><%=@I18n.t(:running)%></th>
          </tr>
          {{#each node in Pcs.nodesController}}
          <tr>
            <td>{{node.name}}</td>
            <td>{{bool-to-icon node.is_sbd_installed}}</td>
            <td>{{bool-to-icon node.is_sbd_enabled}}</td>
            <td>{{bool-to-icon node.is_sbd_running}}</td>
          </tr>
          {{/each}}
        </table>
      </td>
    </tr>
  </table>
  {{#if Pcs.is_sbd_enabled_or_running}}
  <table style="margin-top: 20px;">
    <tr>
      <td class="darkdatatable_header">SBD <%=@I18n.t(:configuration)%></td>
    </tr>
    <tr>
      <td>
        {{{Pcs.sbd_config_table}}}
      </td>
    </tr>
  </table>
  <table style="margin-top: 20px;">
    <tr>
      <td class="darkdatatable_header">SBD <%=@I18n.t(:watchdogs)%></td>
    </tr>
    <tr>
      <td>
        <table class="darkdatatable">
          <tr>
            <th>NODE</th>
            <th>WATCHDOG</th>
          </tr>
          {{#each node in Pcs.nodesController}}
          <tr>
            <td>{{node.name}}</td>
            <td>{{node.sbd_watchdog}}</td>
          </tr>
          {{/each}}
        </table>
      </td>
    </tr>
  </table>
  {{/if}}
</div>

