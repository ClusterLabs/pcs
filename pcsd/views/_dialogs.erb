      </tr>
      <tr>
        <td style="vertical-align: top;"><%=@I18n.t(:'table.title.changeOrderOfResources')%>:</td>
        <td>
          <table id="new_group_resource_list" class="sortable-table">
            <tbody></tbody>
          </table>
        </td>
      </tr>
    </table>
  </form>
</div>
